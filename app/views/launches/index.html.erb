<% @launchData.each do |launch| %>
  <div class="container mx-auto mb-16">
    <div class="flex flex-col">
      <div class="container bg-dark shadow-md rounded-md overflow-hidden">
        <div class="flex flex-col sm:flex-row items-center justify-start space-x-0 sm:space-x-6">
          <div class="w-full sm:w-96 h-96 overflow-hidden flex-shrink-0">
            <%= image_tag launch[:image], class: "object-cover w-full h-full rounded-lg", alt: "Rocket" %>
          </div>
          <div class="text-left mt-4 sm:mt-0">
            <h2 class="text-center sm:text-left text-2xl font-bold underline underline-offset-8"><%= launch[:rocketname] %></h2>
            <p class="mt-3 mb-2"><b>Launch Agency:</b> <%= launch[:lsp] %></p>
            <p class="my-2 line-clamp-3 md:line-clamp-5"><b>Mission:</b> <%= launch[:mission] %></p>
            <p class="my-2"><b>Launch Date:</b> <%= launch[:launch_date] %></p>
            <p class="my-2"><b>Status:</b> <%= launch[:status] %></p>
            <p class="mt-2"><b>Location:</b> <%= launch[:location] %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
